{
  "name": "full-stack-app",
  "version": "1.0.0",
  "scripts": {
    "install:all": "concurrently \"npm install --prefix server\" \"npm install --prefix client\"",
    "server": "nodemon server/server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11"
  }
}
